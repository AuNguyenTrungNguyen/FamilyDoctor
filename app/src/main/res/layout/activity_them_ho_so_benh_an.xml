<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarThemHoSoBenhAn"
        layout="@layout/layout_toolbar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:weightSum="1">

                    <EditText
                        android:hint="Nhập số điện thoại bệnh nhân"
                        android:id="@+id/edtSoDienThoaiCanKiemTra"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:inputType="phone" />

                    <Button
                        android:id="@+id/btnKiemTra"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="Kiểm tra"
                        android:textAllCaps="false" />
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutThemHoSoBenhAn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:text="Tên bệnh:"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/edtTenBenhTrongHoSoBenhAn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp" />

                    <TextView
                        android:id="@+id/txtChonNgayTaiKham"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="CHỌN NGÀY TÁI KHÁM"
                        android:textColor="#ff4800"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:id="@+id/btnThemThuoc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thêm thuốc"
            android:textAllCaps="false" />

        <Button
            android:visibility="gone"
            android:id="@+id/btnHoanThanhHoSoBenhAn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Hoàn thành"
            android:textAllCaps="false" />

    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/lvDanhSachThuocDaThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>


