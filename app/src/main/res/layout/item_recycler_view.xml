<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin" />

        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgPicture"
            android:text="Tên dự án"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_nguoitao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ten"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/imgPicture"
            android:text="Người đăng" />

        <TextView
            android:id="@+id/tv_loai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nguoitao"
            android:layout_toEndOf="@id/imgPicture"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:text="Loại" />
        <TextView
            android:id="@+id/gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_loai"
            android:layout_toEndOf="@id/imgPicture"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:text="Giá (Kg/VND): " />
        <TextView
            android:id="@+id/tv_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_loai"
            android:layout_toEndOf="@id/gia"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:text=" 000 VND" />

    </RelativeLayout>
</android.support.v7.widget.CardView>