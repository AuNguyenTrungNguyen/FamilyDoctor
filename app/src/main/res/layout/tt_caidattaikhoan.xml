<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:background="@color/colorPrimaryDark"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#75e6e6e6"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hinh"
                    android:background="@drawable/no_picture_available"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:id="@+id/id1"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/hinh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/hoten"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/hinh"
                        android:text="Họ và tên:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="83dp"
                        android:id="@+id/tv_hienthihoten"

                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/hoten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/sdt"
                        android:layout_toRightOf="@+id/hinh"
                        android:text="Số điện thoại:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/hienthisdt"

                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/sdt"
                        android:layout_marginLeft="60dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id2"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/id1">
                    <TextView
                        android:id="@+id/email"
                        android:text="Email:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/hienthiemail"
                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/email"
                        android:layout_marginLeft="107dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id3"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/id1">
                    <TextView
                        android:id="@+id/khuvuc"
                        android:text="Khu vực:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/hienthikhuvuc"
                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/email"
                        android:layout_marginLeft="93dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id4"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/id1">
                    <TextView
                        android:id="@+id/bangcap"
                        android:text="Lĩnh vực chuyên môn:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/hienthilinhvuc"
                        android:textStyle="bold"

                        android:layout_alignBaseline="@+id/email"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id6"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/id1">
                    <TextView
                        android:id="@+id/kynang"
                        android:text="Kỹ năng:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_kynang"
                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/email"
                        android:layout_marginLeft="94dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id5"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/id1">
                    <TextView
                        android:id="@+id/diachi"
                        android:text="Địa chỉ liên hệ:"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_diachilienhe"
                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/tv_email"
                        android:layout_marginLeft="56dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/btn_chinhsua"
                        android:text="Chỉnh sửa"
                        android:background="@color/colorAccent"
                        android:textStyle="bold"
                        android:textColor="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="chinhsuaUser"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </ScrollView>
</LinearLayout>

